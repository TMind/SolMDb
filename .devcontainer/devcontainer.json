{  
    "name": "MongoDB Environment",  
    "build": {  
        "dockerfile": "Dockerfile",
        "context": ".."  
    },  
    "settings": {  
        "terminal.integrated.shell.linux": "/bin/bash"  
    },
    "forwardPorts": [27017],  
    "extensions": [  
        "mongodb.mongodb-vscode",  
        "ms-toolsai.jupyter",  
        "ms-python.python"  
    ],  
    "runArgs": ["--init"],      
    "postCreateCommand": {  
        "mongodb" : "sh -c 'mkdir -p /workspaces/mongodb/data/db && chown -R mongodb:mongodb /workspaces/mongodb/data/db && chmod -R 755 /workspaces/mongodb/data/db'",
        "pip" : "pip install --user -r binder/requirements.txt"
    },  
    "postStartCommand": "mongod --logpath /tmp/mongod.log --config /etc/mongod.conf --dbpath /workspaces/mongodb/data/db"    
}  
